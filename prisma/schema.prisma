generator client {
  provider   = "prisma-client"
  engineType = "client"
  output     = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model AirQualityAlert {
  id               String   @id @default(cuid())
  regionCode        String
  city              String
  timestamp         DateTime
  aqi               Int?
  category          String?
  dominantPollutant String?
  pm25              Float?
  pm10              Float?
  createdAt         DateTime @default(now())

  @@index([timestamp])
  @@index([city])
  @@index([regionCode])
}
